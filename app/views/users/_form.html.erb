<br><%= form_for user do |f|%>
<br><%= f.label :name %>
<br><%= f.text_field :name %>
<br><%= f.label :password %>
<br><%= f.text_field :password %>
<br>
<br><%= f.label :height, "Height (in inches)" %>
<br><%= f.text_field :height %>
<br><%= f.label :happiness, "How happy are you? (1-5 scale)" %>
<br><%= f.text_field :happiness %>
<br><%= f.label :nausea, "How nauseous are you? (1-5 scale)" %>
<br><%= f.text_field :nausea %>
<br><%= f.label :tickets, "How many tickets do you have?" %>
<br><%= f.number_field :tickets %>
<br><%= f.check_box :admin %>Admin?
<br><%= f.submit %>
<% end %>