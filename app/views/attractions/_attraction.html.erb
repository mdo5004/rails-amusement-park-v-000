<ul>
    <li><strong><%= attraction.name %></strong></li>
    <ul>
        <li>Nausea Rating: <%= attraction.nausea_rating %></li>
        <li>Happines Rrating: <%= attraction.happiness_rating %></li>
        <li>Tickets: <%= attraction.tickets %></li>
        <li>Minimum Height: <%= attraction.min_height %></li>
        <li>Ride Count: <%= attraction.ride_count %></li>
        <% if index %>
           
            <% if current_user.admin %>
            <li><%= link_to "Show #{attraction.name}", attraction_path(attraction)%></li> 
            <% else %>
            <li><%= link_to "Go on #{attraction.name}", attraction_path(attraction)%></li>
            <% end %>

        <% else %>
        
            <% if current_user.admin %>
            <li><%= link_to "Edit Attraction", edit_attraction_path(attraction)%></li> 
            <% end %>
        <% end %>
    </ul>
</ul>